<div class="container my-4">
  <h2 class="text-center mb-4">申し送りボード</h2>

    <%= render partial: "admin/shared/admin_note/form", locals: { admin_note: @admin_note, 
      form_url: admin_notes_path, submit_label: "作成" } %>

  <hr>

  <!-- フィルター -->
  <div class="row mb-3">
    <div class="col-2 text-center">
      <%= link_to '新しい順', admin_notes_path(direction: 'desc', 
        show_deleted: params[:show_deleted]) %>｜<%= link_to '古い順', 
          admin_notes_path(direction: 'asc', show_deleted: params[:show_deleted]) %>
    </div>
    <div class="col-3 text-center">
      <%= link_to '削除済みを非表示', admin_notes_path(show_deleted: false, 
        direction: params[:direction])%>｜<%= link_to '削除済みを表示', 
          admin_notes_path(show_deleted: true, direction: params[:direction]) %>
    </div>
  </div>

  <!-- ノート一覧 -->
  <div class="row justify-content-center">
    <div class="col-8">
      <% @admin_notes.each do |note| %>
        <div class="card mb-3 <%= 'bg-light text-muted' if note.deleted_at.present? %>">
          <div class="card-body">
            <div class="row align-items-start mb-2">
              <div class="col-9">
                <h5 class="card-title mb-0"><%= note.title %></h5>
              </div>
              <div class="col-3 text-end">
                <% if note.deleted_at.present? %>
                  <span class="badge bg-danger">削除済み</span>
                <% end %>
                <% if note.is_pinned %>
                  <span class="badge bg-warning text-dark">固定</span>
                <% end %>
              </div>
            </div>

            <p class="card-text"><%= note.body %></p>
            <p class="card-text">
              <small class="text-muted">作成日: <%= l(note.created_at, format: :short) %></small>
            </p>

            <div class="text-end">
              <% if note.deleted_at.present? %>
                <%= link_to '復元', restore_admin_note_path(note), method: :patch, class: 'btn btn-sm btn-outline-success' %>
              <% else %>
                <%= link_to '編集', edit_admin_note_path(note), class: 'btn btn-sm btn-outline-secondary me-2' %>
                <%= link_to '削除', admin_note_path(note), method: :delete, data: { confirm: '削除しますか？' }, class: 'btn btn-sm btn-outline-danger' %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <%= paginate @admin_notes %>
    </div>
  </div>
</div>
