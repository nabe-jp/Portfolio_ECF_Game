<h1>グループ一覧</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>公開状態</th>
      <th>削除状態</th>
      <th>作成日時</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.id %></td>
        <td><%= link_to group.name, admin_group_path(group.id) %></td>
        <td><%= group.is_public? ? "公開中" : "非公開" %></td>
        <td><%= group.is_deleted? ? "削除済み" : "有効" %></td>
        <td><%= l(group.created_at, format: :short) %></td>
      </tr>
    <% end %>
  </tbody>
</table>