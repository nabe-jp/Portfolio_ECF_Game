<header class="container-fluid">
  <div class="row">
    <div class="col-2 d-flex justify-content-start offset-1 align-items-center">
      <%= link_to image_tag("logo.jpg", size: "120x80"), about_path %>
    </div>
    <div class="col-8">                                             <!-- 右側：2段 -->
      <div class="d-flex justify-content-end mt-1">                 <!-- 上段：ボタン群 -->
        <ul class="nav">
          <% if admin_signed_in? %>                                 <!-- 管理者がサインインした場合 -->
            <%= render 'shared/header/admin_nav' %>
          <% elsif user_signed_in? %>                               <!-- ユーザーがサインインした場合 -->
            <%= render 'shared/header/user_nav' %>
          <% elsif user_signed_in? %>                               <!-- ゲストがサインインした場合 -->
            <%= render 'shared/header/guest_nav' %>
          <% else %>                                                <!-- 誰もサインインしていない場合 -->
            <%= render 'shared/header/no_user_nav' %>
          <% end %>
        </ul>
      </div>
      <div class="d-flex justify-content-end mt-3">                 <!-- 下段：検索フォーム -->
        <%= render 'shared/header/search_form' %>
      </div>
    </div>
  </div>
</header>