<!-- 自分のプロフィールを表示する部分(userとusersはこの部分テンプレートを表示する) -->
<div class="container mt-3">
  <h2 class="text-center mb-4"><%= @user.nickname %>さんのプロフィール</h2>
  
  <!-- プロフィール表示部分 -->
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= render "public/shared/user/public_profile" %>
    </div>
  </div>

  <!-- 編集ボタン -->
  <div class="row justify-content-center mt-4">
    <div class="col-md-8 text-center">
      <%= render "public/shared/link/links", profile_edit: true, as: :button %>
    </div>
  </div>
</div>