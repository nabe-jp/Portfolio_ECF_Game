<div class="container group-dashboard">
  <!-- グループタイトルを中央揃え -->
  <h1 class="group-dashboard__title"><%= @group.name %></h1>

  <div class="row">
    <!-- 左側：グループ画像 -->
    <div class="col-md-4  d-flex align-items-center justify-content-center">
      <%= image_tag @group.group_image, class: "group-dashboard__image" %>
    </div>

    <!-- 右側：説明とメンバー一覧を上下に分割 -->
    <div class="col-md-8 d-flex flex-column pr-0" style="min-height: 100%;">
      <!-- 説明 -->
      <div>
        <h2 class="group-dashboard__section-title ">グループ説明</h2>
          
        <%= simple_format(@group.description, 
          { class: "group-dashboard__description" }, sanitize: true) %>
      </div>

      <% if group_moderator? %>
        <div class="text-right">
          <%= link_to "グループを編集", edit_group_path(@group), 
            class: "btn btn-outline-primary btn-sm group-dashboard__edit-button" %>
        </div>
      <% end %>

      <!-- メンバー一覧 -->
      <div class="flex-fill position-relative">
        <h2 class="group-dashboard__section-title">管理者一覧</h2>
        <h3 class="group-dashboard__section-subtitle">グループオーナー</strong></h3>
        <ul class="group-dashboard__list">
          <li class="group-dashboard__member-nickname"><%= @group.owner.nickname %></li>
        </ul>

        <% if @group.moderators.any? %>
          <h3 class="group-dashboard__section-subtitle">グループ管理者</h3>
          <ul class="group-dashboard__list">
            <% @group.moderators.each do |moderator| %>
              <li class="group-dashboard__member-nickname"><%= moderator.nickname %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <!-- メンバー一覧リンク -->
      <div class="text-right">
        <%= link_to "▶︎ メンバー一覧", group_members_path(@group), 
          class: "group-dashboard__more-link" %>
      </div>
    </div>
  </div>


  <hr>

  <!-- お知らせボード -->
  <%= render 'public/shared/group/dashboard/notices' %>

  <hr>

  <!-- イベントボード -->
  <%= render 'public/shared/group/dashboard/events' %>

  <hr>

  <!-- 投稿一覧 -->
  <%= render 'public/shared/group/dashboard/posts' %>
</div>