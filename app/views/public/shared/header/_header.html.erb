<header class="container-fluid">
  <div class="row">
    <div class="col-2 d-flex justify-content-start align-items-center">
      <%= link_to image_tag("logo/logo.png", class: "site-logo"), about_path, class: "logo-link" %>
    </div>
    <% if user_signed_in? %>
      <div class="col-8">
        <%= render 'public/shared/header/global_search' %>
      </div>
      <div class="col-2">
        <div class="header__nav-wrapper">
          <ul class="nav">
            <%= render 'public/shared/header/user_nav' %>
          </ul>
        </div>
      
        <div class="mobile-menu-wrapper">
          <%= render 'public/shared/header/hamburger_menu' %>
        </div>
      </div>
    <% else %>
      <div class="col-10">
        <div class="header__nav-wrapper">
          <ul class="nav">
            <%= render 'public/shared/header/no_user_nav' %>
          </ul>
        </div>
      
        <div class="mobile-menu-wrapper">
          <%= render 'public/shared/header/hamburger_menu' %>
        </div>
      </div>
    <% end %>
  </div>
  
</header>