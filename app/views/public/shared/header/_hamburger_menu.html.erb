<div class="mobile-menu-toggle">
  <button class="btn header__nav-button" type="button"
    onclick="document.getElementById('mobileMenu').classList.toggle('show')">
    メニュー
  </button>

  <div id="mobileMenu" class="mobile-menu-items">
    <div class="mobile-menu-section">
      <h2 class="mobile-menu-title">ナビゲーション</h2>
      <ul class="mobile-menu-links">
        <li><%= render "public/shared/link/links", home: true %></li>
        <li><%= render "public/shared/link/links", back: true %></li>
      </ul>

      <% if user_signed_in? %>
        <h2 class="mobile-menu-title">マイメニュー</h2>
        <ul class="mobile-menu-links">
          <li><%= render "public/shared/link/links", profile_page: true %></li>
          <li><%= render "public/shared/link/links", profile_edit: true %></li>
          <li><%= render "public/shared/link/links", mypage: true %></li>
          <li><%= render "public/shared/link/links", settings: true %></li>
          <li><%= render "public/shared/link/links", my_groups: true %></li>
        </ul>
      <% end %>

      <h2 class="mobile-menu-title">投稿</h2>
      <ul class="mobile-menu-links">
        <li><%= render "public/shared/link/links", all_posts_index: true %></li>
        <li><%= render "public/shared/link/links", posts_index: true %></li>
        <li><%= render "public/shared/link/links", check_poster_profile: true %></li>
        <li><%= render "public/shared/link/links", new_post: true %></li>
      </ul>

      <h2 class="mobile-menu-title">グループ</h2>
      <ul class="mobile-menu-links">
        <li><%= render "public/shared/link/links", groups_index: true %></li>
        <li><%= render "public/shared/link/links", group_hosting_post: true %></li>
        <li><%= render "public/shared/link/links", new_group: true %></li>
      </ul>

      <% if user_signed_in? && @group&.id && @group.active_group_memberships.exists?(user_id: current_user.id) %>
        <h2 class="mobile-menu-title">グループ内操作</h2>
        <ul class="mobile-menu-links">
          <li><%= render "public/shared/link/links", dashboard_group: true %></li>
          <li><%= render "public/shared/link/links", group_member: true %></li>
          <li><%= render "public/shared/link/links", group_notices: true %></li>
          <li><%= render "public/shared/link/links", group_events: true %></li>
          <li><%= render "public/shared/link/links", group_posts: true %></li>
          <li><%= render "public/shared/link/links", new_group_post: true %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>