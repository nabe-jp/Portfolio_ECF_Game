<div class="user-post-comment">
  <% if user_signed_in? %>
    <%= form_with(model: [@user_post, @user_post_comment],
      url: user_post_comments_path(@user_post.user, @user_post), local: true) do |f| %>

      <div class="user-post-comment__form-row">
        <%= f.text_area :body, class: "user-post-comment__textarea", 
          placeholder: user_post_comment_body_placeholder, maxlength: UserPostComment::BODY_MAX_LENGTH %>

        <div class="user-post-comment__submit">
          <%= f.submit "コメントする", class: "user-post-comment__submit-btn"  %>
        </div>
      </div>

    <% end %>

  <% else %>
    <p class="user-post-comment__login-required">コメントするにはログインが必要です。</p>
  <% end %>
</div>