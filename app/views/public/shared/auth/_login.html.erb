<%= form_with scope: scope, url: url, local: true do |f| %>
  <%= render "shared/message/messages", resource: resource, error_resource_name: "ログイン" %>
  <div class="form-label-and-input">
    <label><%= f.label :email, "メールアドレス" %></label>
    <%= f.email_field :email, placeholder: "sample@example.com" %>
  </div>
  <div class="form-label-and-input">
    <label><%= f.label :password, "パスワード" %></label>
    <%= f.password_field :password %>
  </div>
  <div class="form-submit">
    <%= f.submit "ログイン", class: "btn btn-base login-btn" %>
  </div>
<% end %>