<% if @posts.any? %>
  <% @posts.each do |post| %> 
    <!-- 投稿全体をリンクにする -->
    <%= link_to user_post_path(post.user.id, post.id), class: 'user-posts__link' do %>
      <div class="post-list">
        <!-- 左側の画像 -->
        <div class="post-list__image-box">
          <%= image_tag(post.post_image, size: "150x150", class: "post-list__image") %>
        </div>

        <!-- 右側の内容（名前、タイトル、内容） -->
        <div class="post-list__content-box">
          <span class="post-list__user"><%= post.user.nickname %></span>
          <h3 class="post-list__title"><%= post.title %></h3>
          <p class="post-list__description"><%= truncate(post.body, length: 100) %></p>
          <p class="post-list__date"><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></p>
        </div>
      </div>
    <% end %>
  <% end %>
<% else %>
  <p>投稿がありません。</p>
<% end %>
