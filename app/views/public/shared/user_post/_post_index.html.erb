<div class="container">
  <div class="row">
    <% if user_posts.any? %>
      <% user_posts.each do |post| %> 
        <!-- 投稿全体をリンクにする -->
        <div class="col-6">
          <%= link_to user_post_path(post.user.id, post.id), class: 'user-posts__link' do %>
            <div class="post-list">
              <!-- 左側の画像 -->
              <div class="post-list__image-box">
                <%= image_tag(post.user_post_image, size: "150x150", class: "post-list__image") %>
              </div>

              <!-- 右側の内容(名前、タイトル、内容) -->
              <div class="post-list__content-box">
                <p class="post-list__item-label">【ニックネーム】</p>
                <p class="post-list__user"><%= post.user.nickname %></p>
                <p class="post-list__item-label">【タイトル】</p>
                <p class="post-list__title"><%= post.title %></p>
                <p class="post-list__item-label">【内容】</p>
                <p class="post-list__description"><%= truncate(post.body, length: 100) %></p>
                <p class="post-list__date"><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="col-12 text-center">
        <p>投稿がありません。</p>
      </div>
    <% end %>
  </div>
  
  <div class="d-flex justify-content-center mt-4">
    <%= paginate user_posts %>
  </div>
</div>