<% @posts.each do |post| %>
  <div class="post">
    <p><%= post.user.nickname %></p> <!-- postのユーザー名を表示 -->
    <% if post.user == current_user %>
      <h3><%= link_to post.title, post_show_user_path(post) %></h3>
    <% else %>
      <h3><%= link_to post.title, user_post_path(post.user.id, post.id) %></h3>
    <% end %>
    <p><%= truncate(post.body, length: 100) %></p>
    <p><%= post.created_at.strftime("%Y-%m-%d") %></p>
  </div>
<% end %>