<div class="profile-box">

  <div class="profile-box__info">
    <div class="profile-box__info-item">
      <div class="profile-box__title">名前(姓)</div>
      <div class="profile-box__name"><%= @user.last_name %></div>
    </div>

    <div class="profile-box__info-item">
      <div class="profile-box__title">名前(名)</div>
      <div class="profile-box__name"><%= @user.first_name %></div>
    </div>

    <div class="profile-box__info-item">
      <div class="profile-box__title">メールアドレス</div>
      <div class="profile-box__email"><%= @user.email %></div>
    </div>
  </div>
</div>