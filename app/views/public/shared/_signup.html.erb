<%= form_with scope: :user, url: user_registration_path do |f| %>
  <%= render "/shared/errors/error_messages", resource: resource %>
  <div class="form-label-and-input">
    <%= f.label :last_name, "名前" %>
    <div class="name-fields">
      <!-- 左：姓 -->
      <div class="name-group">
        <%= f.label :last_name, "(姓)", class: "sub-label" %>
        <%= f.text_field :last_name, placeholder: "山田", class: "short-input" %>
      </div>
      <!-- 右：名 -->
      <div class="name-group">
        <%= f.label :first_name, "(名)", class: "sub-label" %>
        <%= f.text_field :first_name, placeholder: "太郎", class: "short-input" %>
      </div>
    </div>
  </div>
  <div class="form-label-and-input">
    <%= f.label :nickname, "ニックネーム" %>
    <%= f.text_field :nickname, autofocus: true, placeholder: "ヤマ" %>
  </div>
  <div class="form-label-and-input">
    <%= f.label :bio, "自己紹介" %>
    <%= f.text_field :bio, autofocus: true, placeholder: "まだ記載はありません" %>
  </div>
  <div class="form-label-and-input">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, class: "email", placeholder: "sample@exmple.com" %>
  </div>
  <div class="form-label-and-input">
    <!-- 必要なパスワードの文字数を動的に表示、表示できない場合は致命的な問題なので管理者に通知される -->
    <%= f.label :password, "パスワード(#{minimum_password_length_message(@minimum_password_length)})" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <div class="form-label-and-input">
    <%= f.label :password_confirmation, "パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="form-submit">
    <%= f.submit "新規会員登録", class: 'btn btn-base new-user-btn' %>
  </div>
<% end %>