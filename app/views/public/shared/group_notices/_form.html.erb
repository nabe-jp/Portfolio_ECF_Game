<%= form_with model: @group_notice, url: @form_url, local: true do |f| %>

  <!-- タイトル・内容 -->
  <div class="row justify-content-center">
    <div class="col-md-9">
      <div class="form-group">
        <%= f.label :title, "タイトル", class: "control-label" %>
        <%= f.text_field :title, class: "form-control w-100" %>
      </div>

      <div class="form-group mt-3">
        <%= f.label :body, "内容", class: "control-label" %>
        <%= f.text_area :body, class: "form-control w-100", rows: 5 %>
      </div>
    </div>
  </div>

  <!-- 固定表示・送信ボタン -->
  <div class="row mb-4">
    <div class="col-12 d-flex flex-column flex-md-row justify-content-center align-items-center mt-4">
      <div class="form-check">
        <%= f.check_box :is_pinned, class: 'form-check-input' %>
        <%= f.label :is_pinned, '固定表示', class: 'form-check-label' %>
      </div>
      <%= f.submit submit_label ||= "更新する", class: 'btn btn-primary px-4 py-2' %>
    </div>
  </div>
<% end %>