<%= form_with(model: [@group, @group_notice], local: true, url: @group_notice.new_record? ? group_posts_notices_path(@group) : group_posts_notice_path(@group, @group_notice)) do |f| %>
  <% if @group_notice.errors.any? %>
    <div class="alert alert-danger">
      <p><%= pluralize(@group_notice.errors.count, "件のエラー") %>があります。</p>
      <ul>
        <% @group_notice.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body, "本文" %>
    <%= f.text_area :body, class: "form-control", rows: 6 %>
  </div>

  <div class="form-check">
    <%= f.check_box :is_public, class: "form-check-input" %>
    <%= f.label :is_public, "公開する", class: "form-check-label" %>
  </div>

  <div class="mt-3">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>