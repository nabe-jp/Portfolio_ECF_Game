<%= form_with(model: [@group_post, GroupPostComment.new], local: true) do |form| %>
  <div class="mb-2">
    <%= form.text_area :body, rows: 3, placeholder: "コメントを入力", class: "w-full p-2 border rounded" %>
  </div>
  <%= form.submit 'コメントする', class: "bg-blue-500 text-white px-3 py-1 rounded" %>
<% end %>