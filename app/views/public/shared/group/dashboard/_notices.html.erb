<div class="group-dashboard__notices">
  <h2 class="group-dashboard__section-title mb-3">お知らせボード</h2>
  <% if @group_notices.any? %>
    <ul class="group-dashboard__notices-list">
      <% @group_notices.first(3).each do |notice| %>
        <li class="group-dashboard__notices-list-item">
          <%= link_to group_notice_path(@group, notice), 
            class: "text-dark d-block", style: "text-decoration: none;" do %>
            <div class="row">

              <div class="col-9 group-dashboard__notices-list-title">
                <%= notice.title %>
              </div>

              <div class="col-3 text-right text-muted">
                <div class="group-dashboard__notices-list-member-nickname">
                  <%= notice.member.user.nickname %>
                </div>
              </div>
            </div>

            <div class="row mt-2">
              <div class="col-9">
                <div class="group-dashboard__notices-list-body">
                  <%= truncate(notice.body, length: 50) %>
                </div>
              </div>

              <div class="col-3 text-right text-muted">
                <div class="group-dashboard__notices-list-date">
                  投稿日: <%= l(notice.created_at, format: :short) %>
                </div>
              </div>
            </div>

          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="empty-message">お知らせはまだありません</p>
  <% end %>

  <div class="group-dashboard__link-right">
    <%= link_to "▶︎ お知らせ一覧", group_notices_path(@group), class: "group-dashboard__more-link" %>
  </div>
</div>