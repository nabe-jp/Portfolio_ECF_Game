<%= form_with model: @group, local: true do |f| %>
  <% if @group.errors.any? %>
    <div class="error-messages">
      <h3><%= pluralize(@group.errors.count, "エラー") %>が発生しました:</h3>
      <ul>
        <% @group.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "グループ名" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label :slug, "スラッグURL" %>
  <%= f.text_field :slug, class: "form-control", placeholder: "英数字とハイフンのみ（例: example-group）" %>
  <small class="form-text text-muted">
    ※ URLに使われます。例: https://yourdomain.com/groups/<strong>example-group</strong>
  </small>
</div>

  <div class="form-group">
    <%= f.label :description, "説明" %>
    <%= f.text_area :description, rows: 5, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :group_image, "グループ画像" %>
    <%= f.file_field :group_image, class: "form-control" %>
    <% if @group.group_image.attached? %>
      <p>現在の画像:</p>
      <%= image_tag @group.group_image.variant(resize_to_limit: [100, 100]) %>
    <% end %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>