<!-- 左側に投稿画像 -->
<div class="col-12 col-md-6 d-flex justify-content-center">
  <%= image_tag(@group_post.group_post_image, size: "400x400", class: "post-detail__image") %>
</div>

<!-- 右側にプロフィール画像と名前、投稿タイトル、投稿内容 -->
<div class="col-12 col-md-6 d-flex flex-column justify-content-center pr-5">
  <!-- プロフィール画像と名前 -->
  <div class="d-flex align-items-center">
    <%= image_tag(@group_post.member.user.profile_image, size: "40x40", 
        class: "post__user-profile-image rounded-circle") %>
    <span class="ml-2 post-detai__user"><%= @group_post.member.user.nickname %></span>
  </div>

  <!-- 投稿タイトル -->
  <h2 class="my-3 post__title"><%= @group_post.title %></h2>

  <!-- 投稿内容 -->
  <p class="text-left my-2 post__body" style="word-wrap: break-word;">
    <%= @group_post.body %>
  </p>
  <div class="row justify-content-center mt-3">
    <%= render "public/shared/link/links", check_poster_profile: true, as: :button %>
  </div>

  <div class="row justify-content-center mt-3">
    <%= render "public/shared/link/links", group_hosting_post: true, as: :button %>
  </div>

</div>