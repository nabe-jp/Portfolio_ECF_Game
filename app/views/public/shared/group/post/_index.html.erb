<div class="container">
  <div class="row">
    <% if @group_posts.any? %>
      <% @group_posts.each do |post| %> 
        <div class="col-6">
          <%= link_to group_post_path(post.group, post.id), class: 'group-posts__link' do %>
            <div class="group-posts__list">
              <!-- 左側の画像 -->
              <div class="group-posts__image-box">
                <%= image_tag(post.group_post_image, size: "150x150", class: "group-posts__image") %>
              </div>

              <!-- 右側の内容(名前、タイトル、内容) -->
              <div class="group-posts__content-box">
                <p class="group-posts__user"><%= post.member.user.nickname %></p>
                <p class="group-posts__title"><%= post.title %></p>
                <p class="group-posts__description"><%= truncate(post.body, length: 100) %></p>
                <p class="group-posts__date"><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="col-12 text-center">
        <p>投稿はありません。</p>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate @group_posts %>
  </div>
</div>