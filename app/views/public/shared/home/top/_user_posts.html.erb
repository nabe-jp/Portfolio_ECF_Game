<div class="posts-container posts-scroll-container-mobile">
  <% @recent_user_posts.each_with_index do |post, index| %>
    <%= link_to user_post_path(post.user.id, post), class: "box-link" do %>
      <!-- 投稿ヘッダー: ユーザー画像とニックネーム -->
      <div class="post-header">
        <%= image_tag(post.user.profile_image, class: "user-image") %>
        <strong class="post-user-name"><%= post.user.nickname %></strong>
      </div>

      <!-- 投稿内容: 画像とタイトル -->
      <div class="post-body">
        <strong class="post-title"><%= post.title %></strong>
        <%= image_tag(post.user_post_image, class: "post-image") %>
      </div>

      <!-- 投稿日時 -->
      <div class="post-footer">
        <%= post.created_at.strftime("%Y-%m-%d %H:%M") %>
      </div>
    <% end %>
  <% end %>

  <!-- ダミー画像表示: 投稿が足りない場合 -->
  <% if @user_post_dummy_images.present? %>
    <% @user_post_dummy_images.each do |dummy_image| %>
      <div class="box-link box-link-dummy-cards">
        <div class="dummy-header">
          <strong>投稿はありません</strong>
         </div>
        <%= image_tag("card/#{dummy_image}.png", class: "dummy-image") %>
      </div>
    <% end %>
  <% end %>
</div>