<div class="image-container image-container-notice">
  <%= render 'public/shared/home/top/title', title: PostConstants::NOTIFICATION_TITLE %>

  <div class="scrollable-box">
    <% @information_list.each do |info| %>
      <div class="info-item mb-4">
        <div class="d-flex align-items-baseline">
          <div class="scrollable-box-date"><%= info.published_at&.strftime("%Y/%m/%d") %></div>
          <div class="scrollable-box-title"><%= info.title %></div>
        </div>
        <div class="scrollable-box-text"><%= info.body %></div>
      </div>
    <% end %>
  </div>
</div>