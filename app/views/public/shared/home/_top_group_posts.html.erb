<div class="posts-container">
  <% @recent_group_posts.each_with_index do |post, index| %>
    <%= link_to group_post_path(post.group, post.id), class: "box-link" do %>
      <!-- 投稿ヘッダー: グループ画像とグループ名 -->
      <div class="post-header">
        <%= image_tag(post.group.group_image, size: "40x40", class: "group-image") %>
        <strong class="post-group-name"><%= post.group.name %></strong>
      </div>

      <!-- 投稿内容: 画像とタイトル -->
      <div class="post-body">
        <h5 class="post-title ml-2">
          <%= post.title %>
        </h5>
        <%= image_tag(post.group_post_image, size: "100x100", class: "post-image") %>
      </div>

      <!-- 投稿日時 -->
      <div class="post-footer">
        <%= post.created_at.strftime("%Y-%m-%d %H:%M") %>
      </div>
    <% end %>
  <% end %>

  <!-- ダミー画像表示: 投稿が足りない場合 -->
  <% if @group_post_dummy_images.present? %>
    <% @group_post_dummy_images.each do |dummy_image| %>
      <div class="box-link box-link-cards">
        <div class="post-header post-header-cards">
          <strong><%= PostConstants::LATEST_POST_TITLE %>はありません</strong>
         </div>
        <%= image_tag("card/#{dummy_image}.png", size: "150x230", class: "post-image") %>
      </div>
    <% end %>
  <% end %>
</div>